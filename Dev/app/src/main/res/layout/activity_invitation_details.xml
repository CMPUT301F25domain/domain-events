<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/invitationToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:title="Invitation Details"
        android:titleTextColor="#FFFFFF"
        app:navigationIcon="@drawable/arrow"
        app:elevation="6dp"/>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Event Poster -->
            <ImageView
                android:id="@+id/invImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/images"
                android:layout_marginBottom="20dp"
                android:background="#CCCCCC" />

            <!-- Event Title -->
            <TextView
                android:id="@+id/invTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <!-- Date -->
            <TextView
                android:id="@+id/invDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: --/--/--"
                android:textSize="18sp"
                android:textColor="#555555"
                android:layout_marginBottom="8dp" />

            <!-- Location -->
            <TextView
                android:id="@+id/invLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location: Downtown"
                android:textSize="18sp"
                android:textColor="#555555"
                android:layout_marginBottom="12dp" />

            <!-- Waiting list count -->
            <TextView
                android:id="@+id/invWaitingCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waiting List Count: --"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="20dp" />

            <!-- Invitation Message -->
            <TextView
                android:id="@+id/invMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You have been selected to participate in this event."
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="24dp" />

            <!-- Accept Button -->
            <Button
                android:id="@+id/invAcceptBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accept Invitation"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF" />

            <!-- Decline Button -->
            <Button
                android:id="@+id/invDeclineBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Decline Invitation"
                android:textSize="16sp"
                android:backgroundTint="#E53935"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
