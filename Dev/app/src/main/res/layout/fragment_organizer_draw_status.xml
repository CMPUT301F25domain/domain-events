<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="16dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textDeclinedCount"
        android:text="Declined: 0"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <Button
            android:id="@+id/buttonNotifySelected"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="Notify Selected"/>
        <Button
            android:id="@+id/buttonNotifyCancelled"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="Notify Cancelled"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerInvited"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_marginTop="8dp" android:layout_weight="1"/>
</LinearLayout>
