<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="24dp">

    <TextView
        android:id="@+id/TV_event_details_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/event_details"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:indeterminateTint="#9C27B0"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/layout_event_poster_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_event_poster_placeholder"
        android:padding="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_event_poster"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/event_poster_content_description"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_event_poster_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="32dp"
            android:text="@string/event_poster_placeholder"
            android:textColor="#DDFFFFFF"
            android:textSize="16sp"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/TV_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/placeholder_title"
        android:textColor="#AAAAAA"
        android:textSize="32sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/TV_detail_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/placeholder_location"
        android:textColor="#AAAAAA"
        android:textSize="22sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/TV_detail_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/date_amp_time"
        android:textColor="#AAAAAA"
        android:textSize="20sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/TV_detail_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/registration_attendees_x"
        android:textColor="#00BCD4"
        android:textSize="22sp"
        android:textStyle="italic"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_view_QR_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#D76A6A"
        android:padding="12dp"
        android:text="@string/view_qr_code"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <Button
        android:id="@+id/button_update_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#9C27B0"
        android:padding="12dp"
        android:text="@string/update_poster"
        android:textColor="@color/white"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_view_lottery_winners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#9C27B0"
        android:padding="12dp"
        android:text="View Lottery Winners"
        android:textColor="@color/white" />

    <!-- renamed the ID to buttonViewWaitingList -->
    <Button
        android:id="@+id/buttonViewWaitingList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Waiting List"
        android:layout_marginTop="12dp"/>
</LinearLayout>
