<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="24dp">

    <ImageView
        android:id="@+id/IV_qr_code_display"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:contentDescription="QR code image" />

    <Button
        android:id="@+id/btn_download_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download QR"
        android:backgroundTint="#00BCD4"
        android:textColor="@android:color/white"
        android:layout_below="@id/IV_qr_code_display"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/TV_event_id_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_download_qr"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Back"
        android:backgroundTint="#9C27B0"
        android:textColor="@color/white"
        android:layout_margin="16dp" />
</RelativeLayout>
