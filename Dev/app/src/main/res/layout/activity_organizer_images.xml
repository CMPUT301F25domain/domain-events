<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171717"
    android:padding="24dp"
    tools:context="com.example.dev.organizer.OrganizerImagesActivity">

    <TextView
        android:id="@+id/organizer_images_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/organizer_images_title"
        android:textColor="#EFE8E8"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/organizer_images_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/organizer_images_subtitle"
        android:textColor="#D0CACA"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/organizer_images_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/organizer_images_placeholder_icon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="36dp"
        android:contentDescription="@string/organizer_images_icon_content_description"
        android:src="@android:drawable/ic_menu_gallery"
        app:layout_constraintTop_toBottomOf="@id/organizer_images_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/organizer_images_placeholder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/organizer_images_placeholder"
        android:textAlignment="center"
        android:textColor="#EFE8E8"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/organizer_images_placeholder_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>